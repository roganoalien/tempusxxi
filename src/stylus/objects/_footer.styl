.floating-menu{
	position-select(20px,10px,fixed,false,true)
	font-weight 300
	font-size 13px
	a{
		color $c-white
		&:hover{
			color $c-orange
		}
		&:first-child{
			&:after{
				color $c-white !important
				content "|"
				margin-left 10px
			}
		}
		&:last-child{
			padding-left 10px
		}
	}
}
.main-footer{
	flex-container()
	height 120px
	width 100vw
	.footer-menu{
		flex-container()
		list-style-type none
		li{
			margin 0 16px
			a{
				color $c-white
				font-size 13px
				&:hover{
					color $c-orange}
			}
		}
	}
	.outsource-logos{
		flex-container()
		.invader{
			flex-container(center, column, center)
			opacity .5
			transition all .15s ease-in-out
			p{
				font-size 13px
				margin 0 0 10px 0
			}
			img{
				height 40px
				width auto
			}
			&:hover{
				opacity .75
			}
		}
	}
}