body{
	background $c-black
	color $c-white
	font-family 'Lato', sans-serifs
	font-size 16px
	height 100vh
	overflow hidden
	width 100vw
	&.admin{
		background #e2e8f0
		min-height 100vh
		height auto !important
		overflow auto
	}
}

.container{
	&.full-height{
		flex-container(center, column, center)
		height calc(100vh - 120px)
		.row{
			width 100% !important
		}
	}
}

form.login{
	background white !important
}