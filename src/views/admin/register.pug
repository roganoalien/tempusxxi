extends ../layout-admin.pug

block content
	.flex.flex-wrap.container.mx-auto
		div(class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 mb-4 ml-auto mr-auto")
			img.mt-12.mb-6.mx-auto(src="/public/images/tempusxxi.svg", alt="TempusXXI Logo", class="w-6/12")
			h1.text-xs.text-center.font-bold.mb-6.uppercase.text-gray-500 Registro
			form.login.bg-wite.shadow-xl.rounded.px-8.pt-6.pb-8.mb-4(action="/register", method="POST")
				.mb-4
					//- if missing .border-red-500
					label.block.text-gray-700.text-sm.font-bold.mb-2(for="name") Nombre
					input.custom-input-admin.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tigt#email(type="name", placeholder="Nombre", class="focus:outline-none focus:shadow-outline")
					p.text-red-500.text-xs.italic#nameMissing
				.mb-4
					//- if missing .border-red-500
					label.block.text-gray-700.text-sm.font-bold.mb-2(for="email") Correo
					input.custom-input-admin.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tigt#email(type="email", placeholder="Correo", class="focus:outline-none focus:shadow-outline")
					p.text-red-500.text-xs.italic#emailMissing
				.mb-6
					//- if missing .border-red-500
					label.block.text-gray-700.text-sm.font-bold.mb-2(for="password") Password
					input.custom-input-admin.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tigt#password(type="password", placeholder="*********", class="focus:outline-none focus:shadow-outline")
					p.text-red-500.text-xs.italic#passwordMissing
				.mb-6
					//- if missing .border-red-500
					label.block.text-gray-700.text-sm.font-bold.mb-2(for="confirmPassword") Password
					input.custom-input-admin.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tigt#password(type="confirmPassword", placeholder="*********", class="focus:outline-none focus:shadow-outline")
					p.text-red-500.text-xs.italic#confirmMissing
				.flex.items-center.justify-between
					button.custom-button-admin(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline", type="submit") Registrarse
					a.custom-anchor-admin(href="/login", class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800") Iniciar Sesión
			p.text-center.text-gray-500.text-xs &copy;2019 Desarrollado y Diseñado por Rodrigo García