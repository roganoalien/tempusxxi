extends ../layout-admin.pug

block content
	include ../header-nav-admin.pug
	include ../left-nav-admin.pug
	div(class="container w-full flex flex-wrap mx-auto px-2 pt-8 lg:pt-16 my-16")
		+left-menu(false, false, true)
		div(class="w-full lg:w-4/5 p-8 pb-0 mt-6 lg:mt-0 text-gray-900 leading-normal bg-white border border-gray-400 border-rounded shadow-xl flex flex-wrap")
			h1.title(class="w-full px-2 mb-4 text-xl font-bold uppercase text-gray-600") Usuarios
			h2.subtitle(class="w-full px-2 mb-4 text-lg font-bold text-gray-500") Usuarios Registrados
			form.flex.items-center.mb-6.w-full
				div(class="w-4/12 px-2")
					label(for="search", class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2") Buscar Usuarios
					input(class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-gray-300", id="search", name="search", placeholder="Rodrigo")
				div(class="w-4/12 px-2")
					label(for="filter", class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2") Filtro de Búsqueda
					.relative
						select(class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-2 px-4 mb-3 rounded leading-tight focus:outline-none focus:bg-gray-300 focus:border-gray-500", id="filter", name="filter")
							option(value="name", selected) Nombre
							option(value="facebook") Usuario de Facebook
							option(value="email") Correo
							option(value="age") Edad
							option(value="date") Fecha de Registro
						div(class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700")
							<svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
					//- input(class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-gray-300", id="select", name="select")
				div(class="w-2/12 px-2")
					button.bg-blue-500(class="w-full hover:bg-blue-700 text-white font-bold py-2 px-4 -mb-3 rounded focus:outline-none focus:shadow-outline", type="submit") Buscar
			.division(class="w-full px-2 mb-4 text-lg font-bold text-gray-500")
				table.w-full.text-left.table-collapse
					thead
						tr
							th(class="text-sm font-semibold text-gray-700 p-2 bg-gray-200") Img
							th(class="text-sm font-semibold text-gray-700 p-2 bg-gray-200") Nombre
							th(class="text-sm font-semibold text-gray-700 p-2 bg-gray-200") ID Facebook
							th(class="text-sm font-semibold text-gray-700 p-2 bg-gray-200") Correo
							th(class="text-sm font-semibold text-gray-700 p-2 bg-gray-200") Edad
							th(class="text-sm font-semibold text-gray-700 p-2 bg-gray-200") Fecha de Registro
					tbody(class="align-middle table-body-users")
						tr(data-name="Nombre Usuario", data-facebook="id Facebook", data-email="Correo de Usuario", data-age="Edad Usuario", data-date="Fecha de Registro")
							td(class="px-2 py-3 m-0 border-t border-gray-300 font-normal text-sm text-gray-500 whitespace-pre")
								img(class="w-8 h-8 rounded-full m-0", src="https://scontent.fmex7-2.fna.fbcdn.net/v/t1.0-1/p320x320/50241652_10157141788289612_2618338120931737600_n.jpg?_nc_cat=109&_nc_oc=AQkAFO9xtxLx6dCGs7CjiQ2ZT4RSx89NMFShqBWudAm39j5yKaKkkz_JUEmU6AyF_aM&_nc_ht=scontent.fmex7-2.fna&oh=28f59ffa83fc724073a8ac4f1dd77706&oe=5DC2BA3A", alt="Rodrigo García")
